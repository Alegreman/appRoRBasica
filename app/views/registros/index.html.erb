<p id="notice"><%= notice %></p>

<h1>Registros</h1>

<table class="table">
  <thead class="thead-black">
    <tr>
      <th>Numero orden</th>
      <th>Fecha</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @registros.each do |registro| %>
      <tr>
        <td><%= registro.numero_orden %></td>
        <td><%= registro.fecha %></td>
        <td><%= link_to 'Show', registro, class: "btn btn-info" %></td>
        <td><%= link_to 'Edit', edit_registro_path(registro), class: "btn btn-warning" %></td>
        <td><%= link_to 'Destroy', registro, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Registro', new_registro_path, class: "btn btn-success" %>
