<p id="notice"><%= notice %></p>

<h1>Productos</h1>

<table class="table">
  <thead class="thead-dark">
    <tr>
      <th>Nombre producto</th>
      <th>Precio</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @productos.each do |producto| %>
      <tr>
        <td><%= producto.nombre_producto %></td>
        <td><%= producto.precio %></td>
        <td><%= link_to 'Show', producto, class: "btn btn-info" %></td>
        <td><%= link_to 'Edit', edit_producto_path(producto), class: "btn btn-warning" %></td>
        <td><%= link_to 'Destroy', producto, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Producto', new_producto_path, class: "btn btn-success" %>
