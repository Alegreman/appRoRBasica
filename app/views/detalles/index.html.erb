<p id="notice"><%= notice %></p>

<h1>Detalles</h1>

<table class="table">
  <thead class="thead-black">
    <tr>
      <th>Producto</th>
      <th>Cantidad</th>
      <th>Precio venta</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @detalles.each do |detalle| %>
      <tr>
        <td><%= detalle.producto_id %></td>
        <td><%= detalle.cantidad %></td>
        <td><%= detalle.precio_venta %></td>
        <td><%= link_to 'Show', detalle, class: "btn btn-info" %></td>
        <td><%= link_to 'Edit', edit_detalle_path(detalle), class: "btn btn-warning" %></td>
        <td><%= link_to 'Destroy', detalle, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Detalle', new_detalle_path, class: "btn btn-success" %>
